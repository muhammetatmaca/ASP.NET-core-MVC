@model Candidate

<div class="display-6">
    APPLY
</div>

<form method="post" action="/Course/apply" >
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label>e-mail</label>
        <input name="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label>first name</label>
        <input name="FirstName" class="form-control" />
    </div> 

    <div class="form-group my-2">
        <label>last name</label>
        <input name="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label>Age</label>
        <select name="Age" class="form-control"> 
           <option value="18">18</option>
           <option value="19">19</option>
           <option value="20">20</option>
           <option value="21">21</option>
           <option value="22">22</option>
           <option value="23">23</option>
           <option value="24">24</option>
           <option value="25">25</option>
           <option value="26">26</option>
           <option value="27">27</option>





        </select>
    </div>
 

    <div>
        <fieldset>
            <legend>
                Select one course
            </legend>
            <p>
                <input id="mvc" type="radio" name="SelectedCourse" value="ASP.CORE MVC" checked />
                <label>ASP.CORE MVC</label>
            </p>

            <p>
                <input id="api" type="radio" name="SelectedCourse" value="ASP.CORE API" />
                <label>ASP.CORE API</label>
            </p>

            <p>
                <input id="blazor" type="radio" name="SelectedCourse" value="BLAZOR" />
                <label>BLAZOR</label>
            </p>


        </fieldset>
    </div>


    <div class="my-2">
        <button class=" btn btn-outline-primary" type="submit">KAYITI TAMAMLA</button>
        <a href="/" class="btn btn-outline-secondary">HOME</a>

       
    </div>

    

</form>