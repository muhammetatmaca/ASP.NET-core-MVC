@model  IEnumerable<Candidate>



@if(Model.Count()>0)
{
    <h6 class="display-6">
        KAYITLAR(@Model.Count())
    </h6>
    <table class="table table-hover table-striped">
       
        <thead>
            <tr>
                <td>e-mail</td>
                <td>fullname</td>
                <td>apply AT</td>
                <td>course</td>
            </tr>

            
        </thead>

        <tbody>
            @foreach (Candidate candidate in Model)
            {
                <tr>
                    <th>@candidate.Email</th>
                    <th>@candidate.FullName</th>
                    <th>@candidate.ApplyAt</th>
                    <th>@candidate.SelectedCourse</th>
                </tr>
            }
        </tbody>

    </table>
}

else
{
    <div class="alert alert-info">
        kayıtlı ögrenci bulunamadı
        <a class="alert-link" asp-action="Apply">apply</a>

    </div>
}    